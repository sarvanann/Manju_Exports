<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hint_color</item>
        <item name="colorPrimaryDark">@color/hint_color</item>
        <item name="colorAccent">@color/hint_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Edittext_Username_Style">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">@color/hint_color_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLength">30</item>
        <item name="android:padding">10dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="Edittext_Password_Style">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColorHint">@color/hint_color_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLength">10</item>
        <item name="android:padding">10dp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="Button_style">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button_Disable_style">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:background">@drawable/disable_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Dashboard_Button_style">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Layout_Button_style">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextView_Bold_Style">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_light_Style">
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView_medium_Style">
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="checking_pieces_edittext_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">5</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_bg</item>
    </style>


    <style name="rechecking_pieces_edittext_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">5</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_bg_for_rechecking</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="NavDrawerTextStyle_For_Check_Recheck" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
</resources>
